<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.isf.ericsson.dao.StudentDao">
	<resultMap id="studentsMap" type="StudentModel" >
		<id column="rollno" property="rollNumber"  />
		<result column="name" property="name" />
		<result column="email" property="email" />
	</resultMap>

	<select id="getStudentByRollNo" resultMap="studentsMap" parameterType="Integer">
		SELECT
			rollno,
			name,
			email
		FROM
			student
		WHERE
			#{rollno};
	</select>
</mapper>